<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/header2"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/top_menu_header"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <com.gsd.mpm.materialpopupmenu.GoogleTextView
            android:id="@+id/menu_title"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:paddingStart="8dp"
            android:gravity="center|start"
            android:textSize="12sp"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Menu Title" />


        <ScrollView
            android:id="@+id/vert_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/vert_tracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:dividerVertical"
                android:showDividers="middle"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/top_menu_footer"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_above="@id/header2"
        android:src="@drawable/up_arrow" />

    <View
        android:id="@+id/menu_header"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_below="@id/header2"
        android:layout_marginTop="8dp"
        android:layout_height="4dp" />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_below="@id/menu_header"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">
        <LinearLayout
            android:id="@+id/tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <View
        android:id="@+id/menu_footer"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/scroll"/>

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_below="@id/menu_footer"
        android:src="@drawable/down_arrow" />

</RelativeLayout>